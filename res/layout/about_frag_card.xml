<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pure="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fadingEdgeLength="@dimen/card_fade_edge"
    android:requiresFadingEdge="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/CustomBG">

        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            pure:cardUseCompatPadding="true"
            pure:cardElevation="@dimen/cardview_elevate"
            pure:cardBackgroundColor="?attr/card_bg"
            pure:cardCornerRadius="@dimen/cardview_rounding">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/logo_card"
                android:background="?android:selectableItemBackground"
                android:padding="@dimen/cardview_padding">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo"
                    android:contentDescription="@string/desc_list_item_icon" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nexus_useful"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?attr/CustomCardTitle"
            android:gravity="center"
            android:layout_gravity="center"/>

        <android.support.v7.widget.CardView
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_pref_height"
            pure:cardUseCompatPadding="true"
            pure:cardElevation="@dimen/cardview_elevate"
            pure:cardBackgroundColor="?attr/card_bg"
            pure:cardCornerRadius="@dimen/cardview_rounding">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/link1_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="?android:selectableItemBackground"
                android:padding="@dimen/cardview_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/pushbullet"
                    android:contentDescription="@string/desc_list_item_icon" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/nexus_updates"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="?attr/CustomCardTitle"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_pref_height"
            pure:cardUseCompatPadding="true"
            pure:cardElevation="@dimen/cardview_elevate"
            pure:cardBackgroundColor="?attr/card_bg"
            pure:cardCornerRadius="@dimen/cardview_rounding">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/link2_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="?android:selectableItemBackground"
                android:padding="@dimen/cardview_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/gplus"
                    android:contentDescription="@string/desc_list_item_icon" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/nexus_gplus"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="?attr/CustomCardTitle"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_pref_height"
            pure:cardUseCompatPadding="true"
            pure:cardElevation="@dimen/cardview_elevate"
            pure:cardBackgroundColor="?attr/card_bg"
            pure:cardCornerRadius="@dimen/cardview_rounding">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/link3_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="?android:selectableItemBackground"
                android:padding="@dimen/cardview_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/twitter"
                    android:contentDescription="@string/desc_list_item_icon" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/beans_twit"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="?attr/CustomCardTitle"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_pref_height"
            pure:cardUseCompatPadding="true"
            pure:cardElevation="@dimen/cardview_elevate"
            pure:cardBackgroundColor="?attr/card_bg"
            pure:cardCornerRadius="@dimen/cardview_rounding">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/link4_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="?android:selectableItemBackground"
                android:padding="@dimen/cardview_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/donate"
                    android:contentDescription="@string/desc_list_item_icon" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/donate"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="?attr/CustomCardTitle"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lead_dev"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?attr/CustomCardTitle"
            android:gravity="center"
            android:layout_gravity="center"/>

        <android.support.v7.widget.CardView
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_pref_height"
            pure:cardUseCompatPadding="true"
            pure:cardElevation="@dimen/cardview_elevate"
            pure:cardBackgroundColor="?attr/card_bg"
            pure:cardCornerRadius="@dimen/cardview_rounding">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/cardview_padding"
                android:paddingBottom="@dimen/cardview_padding"
                android:paddingStart="@dimen/cardview_pref_padding"
                android:paddingEnd="@dimen/cardview_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/beans"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/CustomCardTitle"
                    android:gravity="bottom" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/beans_sum"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?attr/CustomCardTitle"
                    android:gravity="top" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contribute"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?attr/CustomCardTitle"
            android:gravity="center"
            android:layout_gravity="center"/>

        <android.support.v7.widget.CardView
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_pref_height"
            pure:cardUseCompatPadding="true"
            pure:cardElevation="@dimen/cardview_elevate"
            pure:cardBackgroundColor="?attr/card_bg"
            pure:cardCornerRadius="@dimen/cardview_rounding">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/cardview_padding"
                android:paddingBottom="@dimen/cardview_padding"
                android:paddingStart="@dimen/cardview_pref_padding"
                android:paddingEnd="@dimen/cardview_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/devonte"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/CustomCardTitle"
                    android:gravity="bottom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/devonte_sum"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?attr/CustomCardTitle"
                    android:gravity="top" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_pref_height"
            pure:cardUseCompatPadding="true"
            pure:cardElevation="@dimen/cardview_elevate"
            pure:cardBackgroundColor="?attr/card_bg"
            pure:cardCornerRadius="@dimen/cardview_rounding">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/cardview_padding"
                android:paddingBottom="@dimen/cardview_padding"
                android:paddingStart="@dimen/cardview_pref_padding"
                android:paddingEnd="@dimen/cardview_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/nacha"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/CustomCardTitle"
                    android:gravity="bottom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/mod_sum"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?attr/CustomCardTitle"
                    android:gravity="top" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_pref_height"
            pure:cardUseCompatPadding="true"
            pure:cardElevation="@dimen/cardview_elevate"
            pure:cardBackgroundColor="?attr/card_bg"
            pure:cardCornerRadius="@dimen/cardview_rounding">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/cardview_padding"
                android:paddingBottom="@dimen/cardview_padding"
                android:paddingStart="@dimen/cardview_pref_padding"
                android:paddingEnd="@dimen/cardview_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/daveya"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/CustomCardTitle"
                    android:gravity="bottom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/gfx_sum"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?attr/CustomCardTitle"
                    android:gravity="top" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_pref_height"
            pure:cardUseCompatPadding="true"
            pure:cardElevation="@dimen/cardview_elevate"
            pure:cardBackgroundColor="?attr/card_bg"
            pure:cardCornerRadius="@dimen/cardview_rounding">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/cardview_padding"
                android:paddingBottom="@dimen/cardview_padding"
                android:paddingStart="@dimen/cardview_pref_padding"
                android:paddingEnd="@dimen/cardview_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/surge"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/CustomCardTitle"
                    android:gravity="bottom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/tweak_sum"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?attr/CustomCardTitle"
                    android:gravity="top" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_pref_height"
            pure:cardUseCompatPadding="true"
            pure:cardElevation="@dimen/cardview_elevate"
            pure:cardBackgroundColor="?attr/card_bg"
            pure:cardCornerRadius="@dimen/cardview_rounding">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/cardview_padding"
                android:paddingBottom="@dimen/cardview_padding"
                android:paddingStart="@dimen/cardview_pref_padding"
                android:paddingEnd="@dimen/cardview_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/bajasur"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/CustomCardTitle"
                    android:gravity="bottom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/tweak_sum"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?attr/CustomCardTitle"
                    android:gravity="top" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/miscinfo_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?attr/CustomCardTitle"
            android:gravity="center"
            android:layout_gravity="center"/>

        <android.support.v7.widget.CardView
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_pref_height"
            pure:cardUseCompatPadding="true"
            pure:cardElevation="@dimen/cardview_elevate"
            pure:cardBackgroundColor="?attr/card_bg"
            pure:cardCornerRadius="@dimen/cardview_rounding">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/credits_card"
                android:clickable="true"
                android:background="?android:selectableItemBackground"
                android:paddingTop="@dimen/cardview_padding"
                android:paddingBottom="@dimen/cardview_padding"
                android:paddingStart="@dimen/cardview_pref_padding"
                android:paddingEnd="@dimen/cardview_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/miscinfo_title"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/CustomCardTitle"
                    android:gravity="bottom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/miscinfo_summary"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?attr/CustomCardTitle"
                    android:gravity="top" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
